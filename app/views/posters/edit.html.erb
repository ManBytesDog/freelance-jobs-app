<h1> Edit Profile </h1>
<% if flash[:errors] %>
    <% flash[:errors].each do | error | %>
    <p style="color: red;">
    <%=error %>
    </p>
    <%end%>
<%end%>

<%= form_for @poster do | f | %>
    <%= f.label :email %>
    <br/>
    <%= f.text_field :email %>
    <br/>
   
    

    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br>
    <%= f.label :password_confirmation%>
    <br/>
    <%= f.password_field :password_confirmation%>
    <br/>
   


    <%= f.label :username %>
    <br/>
    <%= f.text_field :username %>
    <br/>
   


    <%= f.label :address %>
    <br/>
    <%= f.text_field :address %>
    <br/>
    <%= f.submit %>
<%end%>