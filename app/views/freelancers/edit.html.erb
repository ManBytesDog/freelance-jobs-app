<h1> Edit your Freelancer Profile <%= @freelancer.full_name %> </h1>
<hr>
<% if flash[:errors] %>
    <% flash[:errors].each do | error | %>
    <li style="color: red;">
    <%=error %>
    </li>
    <%end%>
<%end%>
<%= form_for @freelancer do | f | %>
    
    <%= f.label :degree_certification_or_skills %>
    <br/>
    <%= f.text_field :certifications %>
    <br/>
    <%= f.label :bio %>
    <br/>
    <%= f.text_area :bio %>
    <br/>
    <%= f.label :password %>
    <br/>
    <%= f.password_field :password %>
    <br/>
    <%= f.label :password_confirmation%>
    <br/>
    <%= f.password_field :password_confirmation%>
    <br/>
    <br/>
    <%= f.submit %>
    <br/>
    <br/>
    <%= link_to "Cancel Edit", freelancer_path %>
    
    
<%end%>
